{
  "manifest_version": 3,
  "name": "Job Application Assistant",
  "version": "1.0",
  "description": "Auto-fill job forms, download CV, and generate responses using OpenAI.",
  "permissions": ["storage", "scripting", "activeTab", "tabs"],
  "host_permissions": [
    "http://localhost:11434/*",
    "https://api.openai.com/*",
    "https://api.deepseek.com/*",
    "https://*/*",
    "http://*/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "dataStructure.js",
        "storage.js",
        "companyExtractor.js",
        "pageAnalyzer.js",
        "aiService.js",
        "responseProcessor.js",
        "smartFiller.js",
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["CV_default.html", "standard-answers.json"],
      "matches": ["<all_urls>"]
    }
  ]
}
